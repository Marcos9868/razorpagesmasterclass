@page

@model Pages.Index

@{
  Layout = null;
}

<!DOCTYPE html>

<html>
<head>
  <title>Razor Page Masterclass</title>
</head>
<body>
  @Html.RenderPartialAsync("Shared/NavMenuPartial")
  <h1>Categories</h1>
  <table>
    <thead>
      <tr>ID</tr>
      <tr>Title</tr>
      <tr>Price</tr>
    </thead>
    <tbody>
      @foreach (var category in Model.Categories)
      {
        <tr>
          <td>@category.Id</td>
          <td>@category.Title</td>
          <td>@category.Price.ToString("C")</td>
        </tr>
      }
    </tbody>
  </table>
</body>
</html>